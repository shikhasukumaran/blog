<%= form_for ([@event, @auction]),:html => {:class => "form-horizontal center"} do |f|%>

	<% if @auction && @auction.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@auction.errors.count, "error") %> prohibited this auction from being saved:
			</h2>
			<ul>
				<% @auction.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
			<%= f.label :name, class: "col-md-4 control-label"%>
			<div class="col-md-8">
			<%= f.text_field :name , size: 40 %>
			</div>
	</div>
	<div class="form-group">
		<%= f.label :description, class: "col-md-4 control-label"%>
		<div class="col-md-8">
		<%= f.text_area :description, cols: 40 %>
		</div>
	</div>
		<div class="form-group">
		<%= f.label :auction_type, class: "col-md-4 control-label"%>
		<div class="col-md-8">
			<%= f.select(:auction_type) do %>
	 			 <% [['SILENT_AUCTION'],['FUND_A_NEED'],['DESSERT']].each do |c| -%>
	    		 <%= content_tag(:option, c.first, value: c.last) %>
				 <% end %>
			<% end %>
		</div>
	</div>
	</div>
		<div class="form-group">
		<%= f.label :donor_name, class: "col-md-4 control-label"%>
		<div class="col-md-8">
		<%= f.text_field :donor_name %>
		</div>
	</div>
    </div>
		<div class="form-group">
		<%= f.label :fair_market_value, class: "col-md-4 control-label"%>
		<div class="col-md-8">
		<%= f.text_field :fair_market_value %>
		</div>
	</div>
	<div>
		<div class="form-group">
		<%= f.label :can_multiple_bid_win, class: "col-md-4 control-label"%>
		<div class="col-md-8">
			<%= f.select(:can_multiple_bid_win) do %>
	 			 <% [['YES'], ['NO']].each do |c| -%>
	    		 <%= content_tag(:option, c.first, value: c.last) %>
				 <% end %>
			<% end %>
		</div>
	</div>
    </div>
		<div class="form-group">
		<%= f.label :quantity, class: "col-md-4 control-label"%>
		<div class="col-md-8">
		<%= f.text_field :quantity %>
		</div>
	</div>
	</div>
		<div class="form-group">
		<%= f.label :status, class: "col-md-4 control-label"%>
		<div class="col-md-8">
			<%= f.select(:status) do %>
	 			 <% [['OPEN'], ['CLOSED']].each do |c| -%>
	    		 <%= content_tag(:option, c.first, value: c.last) %>
				 <% end %>
			<% end %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-8">
			<%= f.submit "Submit", class: "btn btn-default btn-primary"%>
		</div>
	</div>

<% end %>
