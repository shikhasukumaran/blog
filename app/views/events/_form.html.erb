<%= form_for  @event ,:html => {:class => "form-horizontal center"} do |f|%>

	<% if @event && @event.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:
			</h2>
			<ul>
				<% @event.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
			<%= f.label :title, class: "col-md-4 control-label"%>
			<div class="col-md-8">
			<%= f.text_field :title %>
			</div>
	</div>
	<div class="form-group">
		<%= f.label :description, class: "col-md-4 control-label"%>
		<div class="col-md-8">
		<%= f.text_area :description %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :created_by, class: "col-md-4 control-label"%>
		<div class="col-md-8">
		<%= f.text_field :created_by %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-8">
			<%= f.submit "Submit", class: "btn btn-default btn-primary"%>
		</div>
	</div>

<% end %>