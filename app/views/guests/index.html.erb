<div class="container-fluid">
	<%= render 'common/navbar' %>
</div>

<h1>Guests</h1>
<%= link_to 'New Guest', new_guest_path%>
<div class="table-responsive">
 <table class="table table-striped">
	<tr>
		<th>First Name</th>
		<th>Middle Name</th>
		<th>Last Name</th>
		<th>Billing Address Line1</th>
		<th>Billing Address Line2</th>
		<th>Email</th>
		<th>Phone Number</th>
		<th>Bid Number</th>
		<th>Dinner Tickets</th>
		<th>Table Number</th>
		<th>Registration</th>
		<th>Status</th>
	</tr>
	<% @guests.each do |guest| %>
		<tr>
			<td><%= guest.first_name %></td>
			<td><%= guest.middle_name %></td>
			<td><%= guest.last_name %></td>
			<td><%= guest.billing_address_1 %></td>
			<td><%= guest.billing_address_2 %></td>
			<td><%= guest.email %></td>
			<td><%= guest.phone_number %></td>
			<td><%= guest.bid_number %></td>
			<td><%= guest.dinner_tickets %></td>
			<td><%= guest.table_number %></td>
			<td><%= guest.registration %></td>
			<td><%= guest.status %></td>
			<td><%= link_to 'Show' , guest_path(guest) %></td>
			<td><%= link_to 'Edit' , edit_guest_path(guest)%></td>
			<td><%= link_to 'Delete' , guest_path(guest) , method: :delete, data: {confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
</div>